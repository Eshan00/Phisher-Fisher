{
    "manifest_version": 3,
    "name": "Suspicious Link Checker",
    "description": "Check suspicious links and domains on the current page.",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "storage",
      "scripting",
      "notifications"
    ],
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  